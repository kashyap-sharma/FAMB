<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:clickable="true"
    android:orientation="vertical">

    <View
        android:id="@+id/topView"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ImageView
        android:layout_width="120dp"
        android:src="@drawable/sad"
        android:layout_marginTop="50dp"
        android:layout_above="@+id/none"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/no_one"
        android:gravity="center"
        android:textColor="#fff"
        android:id="@+id/none"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/titleView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="hello fragment"
        android:visibility="gone"
        android:textColor="#000"
        android:textSize="20sp" />
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        fab:menu_fab_size="normal"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="0dp"
        fab:menu_shadowYOffset="0dp"
        fab:menu_colorNormal="@color/colorBot"
        fab:menu_colorPressed="@color/colorBot"
        fab:menu_colorRipple="#99FFFFFF"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@drawable/fambond_white_48"
        fab:menu_buttonSpacing="0dp"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_colorNormal="#00000000"
        fab:menu_labels_colorPressed="#00000000"
        fab:menu_labels_colorRipple="#00000000"
        fab:menu_labels_showShadow="false"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="14sp"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_position="left"
        fab:menu_openDirection="up"
        android:rotation="0"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_fab_label="NEW BOND">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            fab:fab_colorNormal="#202020"
            fab:fab_colorDisabled="#202020"
            fab:fab_colorPressed="#202020"

            fab:fab_label="CALL"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_ppl"
            fab:fab_label="ADD PEOPLE"
            fab:fab_colorNormal="#202020"
            fab:fab_colorDisabled="#202020"
            fab:fab_colorPressed="#202020"
            fab:fab_size="mini" />


    </com.github.clans.fab.FloatingActionMenu>
    <include layout="@layout/add_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="85dp"
        android:layout_toLeftOf="@+id/menu"
        android:layout_alignParentBottom="true"
        android:id="@+id/hide">

    </include>



</RelativeLayout>