<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_poll"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context="co.jlabs.famb.NewPoll">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:background="@color/colorPrimaryDark"
        android:layout_height="56dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:padding="5dp"

            android:id="@+id/back"
            android:layout_marginLeft="10dp"
            android:src="@drawable/right_arrow"
            android:rotation="180"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Poll"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/n_poll"
            android:layout_toRightOf="@+id/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="create"
            android:textColor="#fff"
            android:layout_below="@+id/n_poll"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/back"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="25sp"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="15sp"
        android:background="@drawable/light_start_gradient">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter poll subject"
            android:background="#00000000"
            android:textColor="#ACB0B2"
            android:inputType="textNoSuggestions"
            android:id="@+id/poll_subject"
            android:paddingLeft="20dp"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:textColorHint="#ACB0B2"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/draw"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginRight="25sp"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="15sp"
        android:background="@drawable/light_start_gradient">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Add note"
            android:id="@+id/add_note"
            android:inputType="textNoSuggestions"
            android:background="#00000000"
            android:textColor="#ACB0B2"
            android:paddingLeft="20dp"
            android:gravity="top"
            android:textSize="17sp"
            android:textColorHint="#ACB0B2"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/draw"
            android:paddingRight="10dp"
            android:gravity="top"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginRight="25sp"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="15sp"
        android:background="@drawable/light_up_gradient">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENTER OPTIONS"
            android:id="@+id/enter"
            android:paddingLeft="20dp"
            android:gravity="top"
            android:paddingTop="10dp"
            android:textSize="12sp"
            android:textColor="#ACB0B2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/option1"
            android:layout_below="@+id/enter"
            android:layout_marginTop="15sp"
            android:background="@drawable/light_start_gradient">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Option 1"
                android:background="#00000000"
                android:id="@+id/op1"
                android:inputType="textNoSuggestions"
                android:textColor="#ACB0B2"
                android:paddingLeft="20dp"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:textColorHint="#ACB0B2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/close_cross_circle"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/option1"
            android:layout_height="40dp"
            android:id="@+id/option2"
            android:layout_marginTop="5sp"
            android:background="@drawable/light_start_gradient">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Option 2"
                android:id="@+id/op2"
                android:inputType="textNoSuggestions"
                android:textColor="#ACB0B2"
                android:paddingLeft="20dp"
                android:background="#00000000"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:textColorHint="#ACB0B2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/close_cross_circle"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/bar"
            android:layout_marginTop="15dp"
            android:background="#0D394B"
            android:layout_below="@id/option2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#ACB0B2"
            android:layout_below="@+id/bar"
            android:id="@+id/add_more"
            android:layout_margin="15dp"
            android:textAllCaps="false"
            android:background="@drawable/loginbut"
            android:text="+ Add more"/>


    </RelativeLayout>
    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:background="@drawable/gol_circle"
        android:layout_gravity="end"
        android:layout_marginTop="-35dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/circle_check"/>
</LinearLayout>
